<h1>Listing foods</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Recipe</th>
    <th>Category</th>
    <th>Deleted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%= food.title %></td>
    <td><%= food.recipe %></td>
    <td><%= food.category_id %></td>
    <td><%= food.deleted %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

