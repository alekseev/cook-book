<%= form_for(@food) do |f| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food.errors.count, "error") %> при сохранении:</h2>

      <ul>
      <% @food.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Название" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :recipe, "Рецепт" %><br />
    <%= f.text_area :recipe %>
  </div>
  <div class="field">
    <%= f.label :category, "Категория" %><br />
    <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :title, params[:category]) %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить" %>
  </div>
<% end %>